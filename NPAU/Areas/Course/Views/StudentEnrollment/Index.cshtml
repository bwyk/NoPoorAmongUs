@{
    ViewData["Title"] = "Course Session List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Course Session List</h2>
        </div>
        <div class="col-6 text-end">

        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
               Course Session Id
            </th>
            <th>
               Course Id
            </th>
            <th>
                Course Name
            </th>
            <th>
                Day
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.CourseId
                </td>
                <td width="10%">
                    @obj.CourseName
                </td>
                <td width="10%">
                    @obj.Day
                </td>
                <td width="10%">
                    @obj.StartTime
                </td>
                <td width="10%">
                    @obj.EndTime
                </td>
                <td width="20%">
                    <div class="d-flex justify-content-center" role="group">
                        <a href="@Url.Action("Enroll", "StudentEnrollment", new { sessionID = @obj.Id})"
                        class="btn btn-success"> <i class="bi bi-plus-circle"></i> Enroll Students in Session</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>