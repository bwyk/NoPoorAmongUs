@using Models.ViewModels
@model NoteTypeVM

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Note Types List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="NoteType" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Type
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Note Type</th>
                <th>Role Access</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var nt in Model.NoteRoles)
                {
                    <tr>
                        <td width="20%">@nt.Key</td>
                        <td width="15%">
                            <ul>
                                @{
                                    foreach (var r in nt.Value)
                                    {
                                        <li>
                                            @r
                                        </li>
                                    }
                                }
                            </ul>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="NoteType" asp-action="Upsert" asp-route-type="@nt.Key"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-area="Admin" asp-controller="NoteType" asp-action="Delete" asp-route-type="@nt.Key"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

