@using Models.Academic

@{
    ViewData["Title"] = "Edit Course Enrollment";
}

@model CourseEnrollment

<form method="post">
    <div class="border p-3 mt-4" style="width:50%">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Course Enrollment</h2>
            <hr/>
        </div>
        <div>
            <div class="mb-3">
                <label asp-for="Id"></label>
                <input asp-for="Id" disabled class="form-control"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete Course Enrollment</button>
        <a asp-controller="CourseEnrollment" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>