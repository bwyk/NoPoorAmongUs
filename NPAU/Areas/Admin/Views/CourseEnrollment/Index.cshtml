@{
    ViewData["Title"] = "Course Enrollment List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Class Enrollment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CourseEnrollment" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add New Course Enrollment
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
               Course Enrollment Id
            </th>
            <th>
               Course Session Id
            </th>
            <th>
               Student Id
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.CourseSessionId
                </td>
                <td width="10%">
                    @obj.StudentId
                </td>
                <td width="10%">
                    <div class="d-flex justify-content-center" role="group">
                        <a asp-controller="CourseEnrollment" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="CourseEnrollment" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>