@using Models.Academic
@{
    ViewData["Title"] = "Add New Course Enrollment";
}

@model CourseEnrollment

<form method="post">
    <div class="border p-3 mt-4" style="width:50%">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Course Enrollment</h2>
            <hr />
        </div>
        <div>
            <div class="mb-3">
                <label asp-for="CourseSessionId"></label>
                <input asp-for="CourseSessionId" class="form-control"/>
            </div>
            <div class="mb-3">
                <label asp-for="StudentId"></label>
                <input asp-for="StudentId" class="form-control"/>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Add Course Session</button>
        <a asp-controller="CourseEnrollment" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>