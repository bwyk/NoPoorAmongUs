@{
    ViewData["Title"] = "Add New School";
}

@model School

<form method="post">
    <div class="border p-3 mt-4" style="width:50%">
        <div class="row pb-2">
            <h2 class="text-primary">Add New School</h2>
            <hr />
        </div>
        <div>
            
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Add School</button>
        <a asp-controller="School" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>