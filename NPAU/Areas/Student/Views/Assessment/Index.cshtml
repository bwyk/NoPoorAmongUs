<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Assessment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Assessment" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create Assessment
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Assessment Id</th>
                <th>Assessment Name</th>
                <th>Assessment Description</th>
                <th>School Name</th>
                <th>Instructor Name</th>
                <th>Subject</th>
                <th>Term</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/Assessment.js"></script>
}