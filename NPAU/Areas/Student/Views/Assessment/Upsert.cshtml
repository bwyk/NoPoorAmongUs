@using Models.ViewModels
@model AssessmentVM
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Assessment.Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    @if (Model.Assessment.Id != 0)
                    {
                        <h2 class="text-primary">Update Assessment</h2>
                    }
                    else
                    {
                        <h2 class="text-primary">Create Assessment</h2>
                    }
                    <hr />
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Assessment.Name"></label>
                    <input asp-for="Assessment.Name" class="form-control" />
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Assessment.Description"></label>
                    <input asp-for="Assessment.Description" class="form-control" />
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Assessment.CourseId"></label>
                    <select asp-for="Assessment.CourseId" asp-items="@Model.CourseList" class="form-select">
                        <option disabled selected>--Select Course--</option>
                    </select>
                </div>
                
                <div class="col-12">
                    @if (Model.Assessment.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <a asp-controller="Assessment" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}