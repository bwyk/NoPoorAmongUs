@using Models

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Attendance</h2>
        </div>

    </div>
    <br /><br />
    <h3 class="text-secondary">Choose a session to mark attendance:</h3>
    <table>

        <tr>
            <th>Course Name</th>
            <th>Day</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
    
    @foreach (var obj in Model)
    {
        <tr>
            <td>@obj.CourseName</td>
            <td>@obj.Day</td>
            <td>@obj.StartTime</td>
            <td>@obj.EndTime</td>
            <td>
                <a asp-controller="Attendance" asp-action="AttendanceTable" asp-route-assessmentId="@obj.Id"
               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Mark Attendance</a>
            </td>
        </tr>
    }
    </table>
    <br />
    <a asp-controller="Attendance" asp-action="CourseSelect"
               class="btn btn-Secondary mx-2"> </>Back to Course Select</a>




</div>

