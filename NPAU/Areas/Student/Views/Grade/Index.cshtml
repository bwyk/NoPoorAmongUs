<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Grading List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Grade" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Grade an Assessment
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Grade Id</th>
                <th>Assessment Name</th>
                <th>Score Earned</th>
                <th>Student Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/Grade.js"></script>
}