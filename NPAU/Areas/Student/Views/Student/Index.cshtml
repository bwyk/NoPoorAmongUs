@{
    ViewData["Title"] = "Student List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add New Student
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Student ID
            </th>
            <th>
                Status
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Address
            </th>
            <th>
                Village
            </th>
            <th>
                Phone
            </th>
            <th>
                English Level
            </th>
            <th>
                Computer Level
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.Status
                </td>
                <td width="10%">
                    @obj.FirstName
                </td>
                <td width="10%">
                    @obj.LastName
                </td>
                <td width="10%">
                    @obj.Birthday.ToString("dd/MM/yyyy")
                </td>
                <td width="10%">
                    @obj.Address
                </td>
                <td width="10%">
                    @obj.Village
                </td>
                 <td width="10%">
                    @obj.Phone
                </td>
                <td width="10%">
                    @obj.EnglishLevel
                </td>
                <td width="10%">
                    @obj.ComputerLevel
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>