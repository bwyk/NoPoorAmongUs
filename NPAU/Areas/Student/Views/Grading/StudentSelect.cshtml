@using Models

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Grading</h2>
        </div>

    </div>
    <br /><br />
    <h3 class="text-secondary">Choose a student to view grades in COURSE NAME:</h3>
    <table>

        <tr>
            <th>Student Name</th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr>No students enrolled in this course.</tr>
        }
        else
        {
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Student.FirstName @obj.Student.LastName</td>
                    <td>
                        <a asp-controller="Grading" asp-action="StudentAssessmentTable" asp-route-assessmentId="@obj.Id"
                   class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Course Grades</a>
                    </td>
                </tr>
            }
        }

    </table>
    <br />
    <a asp-controller="Grading" asp-action="CourseSelect"
       class="btn btn-secondary mx-2">Back to Course Select</a>




</div>

