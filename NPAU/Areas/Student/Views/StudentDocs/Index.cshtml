@{
    ViewData["Title"] = "Student Notes";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Notes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="StudentNotesController" asp-action="CreateNote" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create Note
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered" style="width:100%">
        <thead>
            <th>
                Note
            </th>
            <th>
                Text
            </th>
        </thead>
        <tbody>
            @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.Id
                </td>
                <td width="55%">
                    @obj.Text
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="StudentNotesController" asp-action="EditNote" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="StudentNotesController" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
