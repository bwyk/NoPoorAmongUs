@using Utilities;
@model Models.ViewModels.PublicSchoolScheduleVM
@{
    ViewData["Title"] = "Public School Schedule";
}
<div class="container p-3">
    <div class="d-flex justify-content-between pt-4 row-cols-2">
        <h2 class="text-primary">Add Public School Schedule</h2>
    </div>
</div>
<form method="post">
    <input asp-for="Student.Id" hidden readonly />
    <input asp-for="Student.Address" hidden readonly />
    <input asp-for="Student.Birthday" hidden readonly />
    <input asp-for="Student.ComputerLevel " hidden readonly />
    <input asp-for="Student.EnglishLevel" hidden readonly />
    <input asp-for="Student.FirstName" hidden readonly />
    <input asp-for="Student.LastName" hidden readonly />
    <input asp-for="Student.Village" hidden readonly />
    <input asp-for="Student.Status" hidden readonly />
    <input asp-for="Student.FullName" hidden readonly />

    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-2 row">
                <div class="mb-3 col-4">
                    <label asp-for="PublicSchoolSchedules.StartTime"></label>
                    <input asp-for="PublicSchoolSchedules.StartTime" asp-format="H:mm" class="form-control" />
                </div>
                <div class="mb-3 col-4">
                    <label asp-for="PublicSchoolSchedules.EndTime"></label>
                    <input asp-for="PublicSchoolSchedules.EndTime" asp-format="H:mm" class="form-control" />
                </div>
                <div class="mb-3 form-check-inline">
                    @Html.RadioButtonFor(w => w.PublicSchoolSchedules.Weekday, SD.Weekdays.Monday)@Html.Label("Monday")<br />
                    @Html.RadioButtonFor(w => w.PublicSchoolSchedules.Weekday, SD.Weekdays.Tuesday)@Html.Label("Tuesday")<br />
                    @Html.RadioButtonFor(w => w.PublicSchoolSchedules.Weekday, SD.Weekdays.Wednesday)@Html.Label("Wednesday")<br />
                    @Html.RadioButtonFor(w => w.PublicSchoolSchedules.Weekday, SD.Weekdays.Thursday)@Html.Label("Thursday")<br />
                    @Html.RadioButtonFor(w => w.PublicSchoolSchedules.Weekday, SD.Weekdays.Friday)@Html.Label("Friday")<br />
                </div>
                <div class="d-flex justify-content-start" role="group">
                    <input type="submit" name="Weekday" value="Create Schedule" class="btn btn-primary">
                    <a asp-controller="Manage" asp-action="Index" class="btn btn-secondary mx-1" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

</form>