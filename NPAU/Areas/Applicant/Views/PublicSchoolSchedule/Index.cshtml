@using Models.ViewModels
@model PublicSchoolScheduleVM
@{
    ViewData["Title"] = "Public School Schedule";
}
<div class="container p-3">
    <div class="d-flex justify-content-between pt-4 row-cols-2">
            <h2 class="text-primary">Add Public School Schedule</h2>
    </div>
</div>
<form method="post">
    <input asp-for="PublicSchoolSchedules.Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-2 row">
                <div class="mb-3">
                    <input asp-for="PublicSchoolSchedules.School.Name" readonly value=@Utilities.SD.PublicSchool class="text-muted" />
                </div>
                <div class="mb-3 col-4">
                    <label asp-for="PublicSchoolSchedules.StartTime"></label>
                    <input asp-for="PublicSchoolSchedules.StartTime" class="form-control" />
                    @*                  <span asp-validation-for="StudentId" class="text-danger"></span>
                    *@
                </div>
                <div class="mb-3 col-4">
                    <label asp-for="PublicSchoolSchedules.EndTime"></label>
                    <input asp-for="PublicSchoolSchedules.EndTime" class="form-control" />
                    @*                  <span asp-validation-for="StudentId" class="text-danger"></span>
                    *@
                </div>
                @*                                <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                *@
                <div class="mb-3 form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="PublicSchoolSchedules.Monday" name="Monday" id="Monday" value="Monday">
                    Monday
                </div>
                <div class="mb-3 form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="PublicSchoolSchedules.Tuesday" name="Tuesday" id="tuesday" value="Tuesday">
                    Tuesday
                </div>
                <div class="mb-3 form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="PublicSchoolSchedules.Wednesday" name="Wednesday" id="Wednesday" value="Wednesday">
                    Wednesday
                </div>
                <div class="mb-3 form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="PublicSchoolSchedules.Thursday" name="Thursday" id="Thursday" value="Thursday">
                    Thursday
                </div>
                <div class="mb-3 form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="PublicSchoolSchedules.Friday" name="Friday" id="Friday" value="Friday">
                    Friday
                </div>
                <div class="d-flex justify-content-start" role="group">
                    <button type="submit" class="btn btn-primary" style="width:150px">Create Schedule</button>
                    <a asp-controller="Manage" asp-action="Index" class="btn btn-secondary mx-1" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
<br />
<h2 class="text-primary">Student Public School Schedule</h2>
<hr />
<table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th></th>
            </tr>
        </thead>
    </table>


@section Scripts{
<script src="~/js/publicSchoolSchedule.js"></script>
}
