@{
    ViewData["Title"] = "Applicant List";
}

@{

    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var student = "text-primary";
    var rejected = "text-primary";
    var rating_incomplete = "text-primary";
    var rating_complete = "text-primary";
    var social = "text-primary";
    var instructor = "text-primary";
    var admin = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "student":
            student = "active text-white";
            break;
        case "pending":
            pending = "active text-white";
            break;
        case "rejected":
            rejected = "active text-white";
            break;
        case "rating_incomplete":
            rating_incomplete = "active text-white";
            break;
        case "rating_completed":
            rating_complete = "active text-white";
            break;
        case "social":
            social= "active text-white";
            break;
        case "instructor":
            instructor = "active text-white";
            break;
        case "admin":
            admin = "active text-white";
            break;
        default:
            all = "active text-white";
            break;
    }
}

<div class="container p-3">
    <div class="d-flex justify-content-between pt-4 row-cols-2">
        <div class="p-2">
            <h2 class="text-primary text-start">Student List</h2>
        </div>
        <div class="p-2 col-6 text-end">
            <a asp-area="Applicant" asp-controller="Manage" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Applicant
            </a>
        </div>
    </div>
    <br />
    <div class="d-flex justify-content-between pt-4 row-cols-2">
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="social">
                <li class="list-group-item @social">Social</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="instructor">
                <li class="list-group-item @instructor">Instructor</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="admin">
                <li class="list-group-item @admin">Admin</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="all">
                <li class="list-group-item @all">All</li>
                </a>
            </ul>
            <hr />

            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="student">@*get/pass role?*@
                <li class="list-group-item @student">Student</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="pending">
                <li class="list-group-item @pending">Pending</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="rejected">
                <li class="list-group-item @rejected">Rejected</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="rating_incomplete">
                <li class="list-group-item @rating_incomplete">Rating Pending</li>
                </a>
                <a style="text-decoration:none" asp-controller="Manage" asp-action="Index" asp-route-status="rating_complete">
                <li class="list-group-item @rating_complete">Rating Completed</li>
                </a>
            </ul>
            
        </div>
    </div>

    <br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead id="table-row-container">
      @*      <tr id="table-row-container">
    @*            <th id="col-1"></th>
                <th id="col-2"></th>
                <th id="col-3"></th>
                <th id="col-4"></th>
                <th id="col-5"></th>
                <th id="col-6"></th>
                <th id="col-7"></th>
                <th id="col-8"></th>
                <th id="col-9"></th>
                <th id="col-10"></th>
                <th id="col-11"></th>
            </tr>*@
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/studentFilter.js"></script>
}